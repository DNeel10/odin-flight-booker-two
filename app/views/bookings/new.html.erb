<h1>New Booking</h1>

<%= form_for @booking do |f| %>
  <% if @booking.errors.any? %>
    <% @booking.errors.full_messages.each do |message|%>\
    <h3><%= message %> </h3>
    <%end%>
  <%end%>
  <%= f.hidden_field :flight_id, value: params[:flight_id] %>

  <%= f.fields_for :passengers do |p| %>
    <div>
      <%= p.label :firstname, "First Name: " %>
      <%= p.text_field :firstname %>

      <%= p.label :lastname, "Last Name: " %>
      <%= p.text_field :lastname %>

      <%= p.label :email, "Email Address: " %>
      <%= p.email_field :email %>
    </div>
  <% end %>

  <%= f.submit "Create Booking" %>
<% end %>